{
  "name": "emscripten-build",
  "version": "0.0.1",
  "description": "Configure and build a C/C++ emscripten project.",
  "main": "./dist/bundle.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:cli": "npx rollup ./bin/emscripten.mjs --format cjs --file ./dist/emscripten.js --plugin rollup-plugin-preserve-shebang",
    "build:lib": "npx rollup ./src/index.mjs --format cjs --file ./dist/bundle.js",
    "build": "npm run build:lib && npm run build:cli",
    "postinstall": "node ./scripts/postinstall.js"
  },
  "bin": {
    "emscripten": "./dist/emscripten.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devappd/emscripten-build-npm.git"
  },
  "author": "devappd",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/devappd/emscripten-build-npm/issues"
  },
  "homepage": "https://github.com/devappd/emscripten-build-npm#readme",
  "dependencies": {
    "@zkochan/npm-conf": "^2.0.1",
    "emsdk-npm": "git+https://github.com/devappd/emsdk-npm.git",
    "get-installed-path": "^4.0.8",
    "jsonc-parser": "^3.0.0",
    "lodash.mergewith": "^4.6.2",
    "resolve-path": "^1.4.0",
    "shelljs": "^0.8.4",
    "which": "^2.0.2"
  },
  "optionalDependencies": {
    "cmake-binaries": "git+https://github.com/devappd/cmake-binaries.git",
    "ninja-binaries": "^1.10.1",
    "msbuild": "^1.1.3"
  },
  "devDependencies": {
    "rollup": "^2.33.3",
    "rollup-plugin-preserve-shebang": "^1.0.1"
  }
}
