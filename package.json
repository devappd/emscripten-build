{
  "name": "emscripten-build",
  "version": "1.0.0",
  "description": "Configure and build a C/C++ emscripten project.",
  "main": "./dist/api.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:cli": "npx rollup ./src/cli.mjs --format cjs --file ./dist/cli.js --plugin rollup-plugin-preserve-shebang",
    "build:lib": "npx rollup ./src/index.mjs --format cjs --file ./dist/api.js",
    "build": "npm run build:lib && npm run build:cli"
  },
  "bin": {
    "emscripten": "./dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devappd/emscripten-build-npm"
  },
  "author": "devappd",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/devappd/emscripten-build-npm/issues"
  },
  "homepage": "https://github.com/devappd/emscripten-build-npm#readme",
  "keywords": [
    "emscripten",
    "cmake",
    "ninja",
    "webassembly",
    "wasm",
    "emsdk",
    "sdk",
    "build"
  ],
  "files": [
    "docs/**/*",
    "dist/**/*"
  ],
  "dependencies": {
    "emscripten-sdk-npm": "^0.3.0",
    "get-installed-path": "^4.0.8",
    "lodash.mergewith": "^4.6.2",
    "resolve-path": "^1.4.0",
    "which": "^2.0.2"
  },
  "optionalDependencies": {
    "@devappd/cmake-binaries": "^1.0.0",
    "@devappd/ninja-binaries": "^1.10.2"
  },
  "devDependencies": {
    "rollup": "^2.36.1",
    "rollup-plugin-preserve-shebang": "^1.0.1"
  }
}
